{
  "name": "cook-book",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "test": "meteor test --once --driver-package meteortesting:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --extra-packages bundle-visualizer"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "apollo-boost": "^0.1.19",
    "apollo-server-express": "^2.1.0",
    "body-parse": "^0.1.0",
    "express": "^4.16.4",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "graphql-tools": "^4.0.2",
    "meteor-node-stubs": "^0.4.1",
    "react": "^16.6.0",
    "react-apollo": "^2.2.4",
    "react-dom": "^16.6.0",
    "react-redux": "^5.0.7",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "eslintConfig": {
    "settings": {
      "import/resolver": "meteor",
      "react": {
        "version": "^16.6.0"
      }
    },
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "2018",
      "sourceType": "module"
    },
    "plugins": [
      "meteor",
      "import",
      "prettier",
      "react"
    ],
    "extends": [
      "plugin:meteor/recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "rules": {
      "max-lines": "error",
      "import/no-unresolved": "error",
      "prettier/prettier": "error",
      "react/require-default-props": "off",
      "react/no-array-index-key": "off",
      "react/forbid-prop-types": "off"
    }
  },
  "eslintIgnore": [
    "lib/**/*.js",
    "imports/linked/**/*.js"
  ],
  "devDependencies": {
    "babel-plugin-inline-import": "^3.0.0"
  }
}
